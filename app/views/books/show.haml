.container
  .bookview
    .book-cover
    .book-info
      %span.title
        = @book.title
      %span.author
        = @book.author
      %span.date
        = @book.publication_date
      %span.editorial
        = @book.editorial
      %span.edition
        = @book.edition
      %span.isbn
        = @book.isbn
    .social
      %a{:href => "#{}"}
        =image_tag  "facebook.png"
      %a{:href => "#{}"}
        =image_tag  "twitter.png"
  .libraries
    %h3 Este libro esta disponible en las siguientes bibliotecas:
    %br
    .items
      - @book.libraries.each do |library|
        = link_to '#', data: { address: library.google_address, id:library.id }, class: 'library-item' do
          %span.library-title #{library.name}
    %a#view-library{:href => "#"} Ver Biblioteca
    .library-map
      #map-canvas{style:"width:400px; height:400px;"}
  = link_to 'Edit', edit_book_path(@book)
  |
  \#{link_to 'Back', books_path}
  = javascript_include_tag "https://maps.googleapis.com/maps/api/js?key=AIzaSyCHMJp2-XbvDl_1E1zHuOUglT8vjVCNgVA&sensor=false"
